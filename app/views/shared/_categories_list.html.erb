<div class="category">
  <div class="list-group">
    <% categories.each do |category| %>
      <% if resource.present? && category.id == resource.id %>
        <%= link_to category.name, category_path(category), class: 'list-group-item disabled' %>
      <% else %>
        <%= link_to category.name, category_path(category), class: 'list-group-item' %>
      <% end %>
    <% end %>
  </div>
</div>