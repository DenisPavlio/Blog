<h1>All Posts</h1>
<p class="text-left">
  <a href="<%= new_post_path %>"><button type="button" class="btn btn-primary">New Post</button></a>
</p>
<br><br>

    <table class="table text-left">
      <thead>
      <tr class="info">
        <th>Date</th>
        <th>Name</th>
        <th>Content</th>
        <th>Autor</th>
        <th>Category</th>
        <th>Likes</th>
        <th>Comments</th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.date %></td>
          <td><%= link_to post.name, post_path(post) %></td>
          <td><%= link_to truncate(post.content, length: 50, separator: ' '), post_path(post) %></td>
          <td><%= post.user.name %></td>
          <td><%= post.category.name %></td>
          <td><%= post.cached_votes_up %></td>
          <td><%= post.comments.count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

<%= link_to 'New Post', new_post_path %>

